{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/graphql/schemas"],
    "exclude": ["node_modules", "frontend"]
  }